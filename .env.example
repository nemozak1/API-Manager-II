# API Manager II - Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
NODE_ENV=development
ORIGIN=http://localhost:5200
APP_CALLBACK_URL=http://localhost:5200/auth/callback

# Redis Configuration (for sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OBP API Configuration
OBP_API_HOST=http://localhost:8080
OBP_API_VERSION=v5.1.0

# OAuth 2.0/OIDC Configuration
# Keycloak Provider
KEYCLOAK_OAUTH_CLIENT_ID=your-keycloak-client-id
KEYCLOAK_OAUTH_CLIENT_SECRET=your-keycloak-client-secret

# OBP OIDC Provider
OBP_OAUTH_CLIENT_ID=your-obp-oidc-client-id
OBP_OAUTH_CLIENT_SECRET=your-obp-oidc-client-secret

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000
SESSION_COOKIE_NAME=api-manager-session

# Database Configuration (Optional - for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/api_manager_ii

# Security Configuration
CSRF_SECRET=your-csrf-secret-key

# Logging Configuration
LOG_LEVEL=debug
LOG_COLORS=true

# Development Settings
VITE_DEV_SERVER_PORT=5200
VITE_DEV_SERVER_HOST=localhost

# Production Settings (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=info
# LOG_COLORS=false
